{
  "name": "abbrlink",
  "version": "1.0.0",
  "license": "MIT",
  "author": "tangerball",
  "keywords": [
    "abbrlink",
    "astro",
    "vitepress"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "release": "turbo release --concurrency=1",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,ts,json,html}\""
  },
  "dependencies": {
    "turbo": "^1.13.3",
    "unbuild": "^2.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.5",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^9.2.0",
    "eslint-config-alloy": "^5.1.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "release-it": "^17.2.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "config-release-it": "workspace:*"
  },
  "lint-staged": {
    "*.{js,ts,json,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
